{
    "manifest_version": 3,
    "name": "Yeni Sekme Sayfası",
    "version": "1.0",
    "description": "Kişiselleştirilebilir yeni sekme sayfası.",
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "web_accessible_resources": [
        {
            "resources": [ "skins/*.css", "skins/js/*.js" ],
            "matches": [ "<all_urls>" ]
        }
    ],
    "host_permissions": [
        "*://www.google.com/s2/favicons*",
        "*://*.gstatic.com/*",
        "*://api.rss2json.com/*",
        "*://duckduckgo.com/*",
        "*://www.bing.com/*"
    ]
}
